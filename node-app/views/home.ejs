<%- include("partials/header"); -%>
<div class="table-wrapper">
    <div class="table-title">
        <div class="row">
            <div class="col-sm-6">
                <h2>Account summary</h2>
            </div>
        </div>
    </div>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <td>BANK</td>
            <td>ACCOUNT</td>
            <td>BALANCE</td>
        </tr>
        </thead>

        <tbody>
        <% accountsTable.forEach(element =>{ %>
            <tr>
                <td><%= element.bank_name %></td>
                <td><%= element.account_type %></td>
                <td>balance</td>
            </tr>
        <% }) %>
        </tbody>
    </table>


</div>

<div class="col-sm-3">
    <a href="#" class="btn btn-success"><span>Data Analysis Report</span></a>
</div>
<div class="col-sm-3">
    <a href="#" class="btn btn-success"><span>Data Analysis Graph</span></a>
</div>
<div class="col-sm-6">
    <a href="#addAccount" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New Account</span></a>
</div>
<%- include("partials/footer"); -%>


<!-- Add Modal HTML -->
<div id="addAccount" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form class="" action="/account" method="post">
                <div class="modal-header">
                    <h4 class="modal-title">Add Account</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Bank: </label>
                        <label>1 - RBC </label>
                        <label>2 - Scotia Bank </label>
                        <label>3 - Itau </label>
                        <input id="bank_id" type="text" class="form-control" required name="bank_id"
                               value=""><br><br>
                    </div>
                    <div class="form-group">
                        <label>Account Type: </label>
                        <label>1 - Chequing </label>
                        <label>2 - Saving </label>
                        <label>3 - Credit Card </label>
                        <input id="account_type_id" type="text" class="form-control" required name="account_type_id"
                               value=""><br><br>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-success" name="insert" value="Add">
                </div>
            </form>
        </div>
    </div>
</div>