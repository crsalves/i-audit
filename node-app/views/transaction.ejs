<%- include("partials/header"); -%>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <td>BANK</td>
        <td>ACCOUNT</td>
        <td>BALANCE</td>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td><%= accountInfo.bank_name %></td>
        <td><%= accountInfo.account_type %></td>
        <td><%= accountInfo.balance %></td>
    </tr>
    </tbody>
</table>

<div class="table-wrapper">

    <div class="table-title">
        <div class="row">
            <div class="col-sm-6">
                <h1>Transactions</h1>
            </div>
            <div class="col-sm-6">
                <a href="#addTransaction" class="btn btn-success" data-toggle="modal"><i
                            class="material-icons">&#xE147;</i>
                    <span>Add new transaction</span></a>
            </div>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>
							<span class="custom-checkbox">
								<input type="checkbox" id="selectAll">
								<label for="selectAll"></label>
							</span>
            </th>
            <th>Date</th>
            <th>Category</th>
            <th>Transaction Type</th>
            <th>Value</th>
        </tr>
        </thead>

        <tbody>
        <form action="/del-transaction" method="post">
            <input type="text" class="holdIDs" name="account_id" value="<%= accountInfo.account_id %>" >
        <% transactionsTable.forEach(element =>{ %>

            <tr>
                <td>
							<span class="custom-checkbox">
								<input type="checkbox" id="<%= element.transaction_id %>" name="transaction_id" value="<%= element.transaction_id %>">
							</span>
                </td>
                <td><%= element.transaction_date %></td>
                <td><%= element.category_type %></td>
                <td><%= element.transaction_type %></td>
                <td><%= element.transaction_value %></td>
                <td>
                    <input type="submit" class="btnDelIcon material-icons" value="&#xE872;" onclick="return confirmDelete()">
                </td>
            </tr>
        <% }) %>
        </form>
        </tbody>


    </table>
</div>

<br><br><br><br>
<a class="btn" href="/home" role="button"><- Page Back</a>
<br><br><br><br>
<%- include("partials/footer"); -%>


<!-- Add Modal HTML -->
<div id="addTransaction" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/add-transaction" class="customRadio customCheckbox m-0 p-0" method="post">
                <input type="text" class="holdIDs" name="account_id" value="<%= accountInfo.account_id %>" >

                <div class="modal-header">
                    <h4 class="modal-title">Add Transaction</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="row mb-0">
                    <div class="row justify-content-start">
                        <div class="form-group" ><label>Date: </label>
                            <input type="datetime-local" name="transaction_date" required>
                        </div>
                    </div>
                    <div class="row justify-content-start" required>
                        <div class="form-group" ><label>CATEGORY: </label>
                            <div class="row"><input type="radio" name="category_type" value="1" checked>
                                <label>Salary</label></div>
                            <div class="row"><input type="radio" name="category_type" value="2"> <label>Cash
                                    Back</label></div>
                            <div class="row"><input type="radio" name="category_type" value="3"> <label>House
                                    Rent</label></div>
                            <div class="row"><input type="radio" name="category_type" value="4">
                                <label>Electricity</label></div>
                            <div class="row"><input type="radio" name="category_type" value="5"> <label>Food</label>
                            </div>
                            <div class="row"><input type="radio" name="category_type" value="6"> <label>Internet</label>
                            </div>
                            <div class="row"><input type="radio" name="category_type" value="7"> <label>Personal
                                    Care</label></div>
                            <div class="row"><input type="radio" name="category_type" value="8">
                                <label>Entertainment</label></div>
                        </div>
                    </div>
                    <div class="row justify-content-start" >
                        <div class="form-group"><label>DEBIT/CREDIT: </label>
                            <div class="row"><input type="radio" name="transaction_type" value="1">
                                <label>Debit</label></div>
                            <div class="row"><input type="radio" name="transaction_type" value="2" checked>
                                <label>Credit</label></div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-start">
                    <div class="form-group" ><label>Value: </label>
                        <input type="number" name="transaction_value" value="" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-success" name="insert" value="Add">
                </div>
            </form>
        </div>
    </div>
</div>