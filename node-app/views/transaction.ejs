<%- include("partials/header"); -%>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>BANK</th>
        <th>ACCOUNT</th>
        <th>BALANCE</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td><%= accountInfo.bank_name %></td>
        <td><%= accountInfo.account_type %></td>
        <td><%= accountInfo.balance %></td>
    </tr>
    </tbody>
</table>

<div class="table-wrapper">
    <div class="table-title">
        <div class="row">
            <form action="/transaction-interval" method="post">
                <div class="col-sm-9">
                    <label>From: </label>
                    <input type="datetime-local" class="calendar" name="transaction_start_date" required>
                    <label>To: </label>
                    <input type="datetime-local" class="calendar" name="transaction_end_date" required>
                    <input type="submit" class="btn btn-success " value="Filter">
                    <input type="text" class="holdIDs" name="account_id" value="<%= accountInfo.account_id %>">
                </div>
            </form>
        </div>
    </div>
</div>

<div class="table-wrapper">
    <div class="table-title">
        <div class="row">
            <div class="col-sm-6">
                <h1>Transactions</h1>
            </div>
            <div class="col-sm-6">
                <a href="#addTransaction" class="btn btn-success" data-toggle="modal"><i
                            class="material-icons">&#xE147;</i> <span>Add New Transaction</span></a>
                <a href="#deleteTransaction" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i>
                    <span>Delete</span></a>
            </div>
        </div>
    </div>
</div>


<table class="table table-striped table-hover">
    <input type="text" class="holdIDs" name="account_id" value="<%= accountInfo.account_id %>">
    <thead>
    <tr>
        <th>
							<span class="custom-checkbox">
								<input type="checkbox" id="selectAll">
								<label for="selectAll"></label>
							</span>
        </th>
        <th>Date</th>
        <th>Category</th>
        <th>Transaction Type</th>
        <th>Value</th>
    </tr>
    </thead>
    <tbody>
    <form action="/transaction-delete" method="post">
        <% transactionsTable.forEach(element =>{ %>
            <tr>
                <td>
							<span class="custom-checkbox">
								<input type="checkbox" id="checkbox1" name="options[]" value="1">
								<label for="checkbox1"></label>
							</span>
                </td>
                <td><%= element.transaction_date %></td>
                <td><%= element.category_type %></td>
                <td><%= element.transaction_type %></td>
                <td><%= element.transaction_value %></td>
                <td>
                    <a href="#editTransaction" class="edit" data-toggle="modal"><i class="material-icons"
                                                                                   data-toggle="tooltip"
                                                                                   title="Edit">&#xE254;</i></a>
                    <a href="#deleteTransaction" class="delete" data-toggle="modal"><i class="material-icons"
                                                                                       data-toggle="tooltip"
                                                                                       title="Delete">&#xE872;</i></a>
                </td>
            </tr>
        <% }) %>
    </form>
    </tbody>
</table>

<br><br><br><br>
<a class="btn" href="/home" role="button"><- Page Back</a>
<br><br><br><br>

<%- include("partials/footer"); -%>

<!-- Add Modal HTML -->
<div id="addTransaction" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/transaction-add" class="customRadio customCheckbox m-0 p-0" method="post">
                <input type="text" class="holdIDs" name="account_id" value="<%= accountInfo.account_id %>">
                <div class="modal-header">
                    <h4 class="modal-title">Add Transaction</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="row mb-0">
                    <div class="row justify-content-start">
                        <div class="form-group"><label>Date: </label>
                            <input type="datetime-local" name="transaction_date" required>
                        </div>
                    </div>
                    <div class="row justify-content-start" required>
                        <div class="form-group"><label>CATEGORY: </label>
                            <div class="row"><input type="radio" name="category_type" value="1" checked>
                                <label>Salary</label></div>
                            <div class="row"><input type="radio" name="category_type" value="2"> <label>Cash
                                    Back</label></div>
                            <div class="row"><input type="radio" name="category_type" value="3"> <label>House
                                    Rent</label></div>
                            <div class="row"><input type="radio" name="category_type" value="4">
                                <label>Electricity</label></div>
                            <div class="row"><input type="radio" name="category_type" value="5"> <label>Food</label>
                            </div>
                            <div class="row"><input type="radio" name="category_type" value="6"> <label>Internet</label>
                            </div>
                            <div class="row"><input type="radio" name="category_type" value="7"> <label>Personal
                                    Care</label></div>
                            <div class="row"><input type="radio" name="category_type" value="8">
                                <label>Entertainment</label></div>
                        </div>
                    </div>
                    <div class="row justify-content-start">
                        <div class="form-group"><label>DEBIT/CREDIT: </label>
                            <div class="row"><input type="radio" name="transaction_type" value="1">
                                <label>Debit</label></div>
                            <div class="row"><input type="radio" name="transaction_type" value="2" checked>
                                <label>Credit</label></div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-start">
                    <div class="form-group"><label>Value: </label>
                        <input type="number" name="transaction_value" value="" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-success" name="insert" value="Add">
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Modal HTML -->
<div id="deleteTransaction" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Delete Employee</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete these Records?</p>
                    <p class="text-warning"><small>This action cannot be undone.</small></p>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-danger" value="Delete">
                </div>
            </form>
        </div>
    </div>
</div>


